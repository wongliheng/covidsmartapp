<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingFragment">

    <Button
        android:id="@+id/createAppointment"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="64dp"
        android:text="Create New Appointment"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/viewResults"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="View Test Results"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAppointment"  />

    <Button
        android:id="@+id/viewLocationHistory"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="View Location History"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewResults" />

</androidx.constraintlayout.widget.ConstraintLayout>