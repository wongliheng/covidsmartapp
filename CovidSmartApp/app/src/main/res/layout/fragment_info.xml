<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoFragment">

    <Button
        android:id="@+id/covidCases"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="64dp"
        android:text="Active Covid Cases Globally"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/localRestrictions"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="Local Travel Restrictions"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/covidCases"  />

    <Button
        android:id="@+id/globalRestrictions"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="International Travel Restrictions"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/localRestrictions" />

    <Button
        android:id="@+id/vaccineNews"
        android:layout_width="325dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        android:text="Covid Vaccine News"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/globalRestrictions" />

</androidx.constraintlayout.widget.ConstraintLayout>